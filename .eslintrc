{
  "ecmaFeatures": {
    "modules": true
  },
  "env": {
    "es6": true,
    "mocha": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-console": 0,
    "indent": [2, 2],
    "linebreak-style": [2, "unix"],
    "quotes": [2, "double"],
    "semi": [2, "always"]
  }
}
